gtpj() {
    cd $(ls -d $HOME/projects/* | grep "$1")
}

lpj(){
    ls -al $HOME/projects
}

cpj(){
    if [ -z "$1" ]
    then
        echo "Se require nombre de projecto"
    else
        cd $HOME/projects
        mkdir "$1"
    fi
}

sapp(){
    if [ -z "$1" ]
    then
        echo "Se require nombre de projecto"
    else
        gtpj "$1"
        if [ -f app.js ]; then
            nodemon app.js
        fi
    fi
}

ecmd() {
    vim $HOME/.bashfiles/personaCommands
}

reload(){
    source $HOME/.bashrc
}

runApp(){
    NODE_ENV='development' $(pwd)/node_modules/electron/dist/electron .
}
